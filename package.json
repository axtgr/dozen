{
  "name": "dozen",
  "version": "2.2.2",
  "description": "Load config from a dozen sources, transform and validate with Zod, Valibot or ArkType",
  "author": "Alex Schneider <me@schneider.ax>",
  "license": "ISC",
  "repository": "https://github.com/axtgr/dozen",
  "keywords": [
    "config",
    "configuration",
    "env",
    "environment",
    "variables",
    "dotenv",
    "argv",
    "validate",
    "validation",
    "schema",
    "zod"
  ],
  "private": true,
  "packageManager": "bun@1.2.4",
  "engines": {
    "node": ">=23.6.0",
    "bun": ">=1.2.4"
  },
  "type": "module",
  "main": "./dist/presets/node.js",
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./dist/presets/node.js",
    "./base": "./dist/index.js",
    "./plugins/*": "./dist/plugins/*.js"
  },
  "scripts": {
    "test": "bun test",
    "clean": "rimraf dist",
    "build": "bun run clean && tsc"
  },
  "dependencies": {
    "@fastify/deepmerge": "^3.1.0",
    "@standard-schema/spec": "^1.0.0",
    "chokidar": "^4.0.3",
    "json5": "^2.2.3",
    "mime": "^4.0.7",
    "parse-gitignore": "^2.0.0",
    "text-case": "^1.0.9"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.9",
    "@types/bun": "^1.2.8",
    "@types/node": "^22.13.10",
    "@types/parse-gitignore": "^1.0.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.2"
  }
}
